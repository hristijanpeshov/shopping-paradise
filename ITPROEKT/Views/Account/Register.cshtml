@model ITPROEKT.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/Content/Login.css")
<div class="row p-5">
    <div class="col-md-6 login-form-1">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Label("Create a new account", new { @class = "text-white h3 mb-5" })
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 text-white" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2  text-white" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 text-white" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default text-white" value="Register" style="background-color:#65a4bd" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-6 login-form-2" style="background-color:#65a4bd">
        <div class="d-flex justify-content-center p-0">
            <img class="m-0" src="~/Images/shparadise-logo2.png" style="max-width: 100%" />
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
